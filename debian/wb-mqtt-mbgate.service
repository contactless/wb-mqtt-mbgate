[Unit]
Description=Wiren Board MQTT to Modbus TCP gateway
After=mosquitto.target

[Service]
Type=simple
Environment="MBGATE_OPTS=-c /etc/wb-mqtt-mbgate.conf"
ExecStart=/usr/bin/wb-mqtt-mbgate \$MBGATE_OPTS
ExecReload=/bin/kill -HUP \$MAINPID
KillMode=process
Restart=on-failure
StartLimitBurst=2
StartLimitInterval=20

[Install]
WantedBy=multi-user.target
Alias=wb-mqtt-mbgate.service
